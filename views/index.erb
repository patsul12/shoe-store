<div class="row stores">
  <h3>Stores</h3>
  <ul>
    <% @stores.each do |store| %>
      <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
    <% end %>
  </ul>
  <form class="" action="/stores" method="post">
    <div class="form-group">
      <label for="store_name">Name</label>
      <input class="form-control" type="text" name="store_name" placeholder="Enter a name...">
      <label for="store_description">Description</label>
      <textarea class="form-control" name="store_description" placeholder="Enter a description..."></textarea>
      <label for="store_address">Address</label>
      <input class="form-control" type="text" name="store_address" placeholder="Enter a address...">
    </div>

    <div class="form-group">
      <button class="btn btn-primary" type="submit" name="create_store">Create Store</button>
    </div>
  </form>
</div>


<h3>Brands</h3>
<ul>
  <% @brands.each do |brand| %>
    <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
  <% end %>
</ul>
