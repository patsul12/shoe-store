<div class="row">
  <% if !@errors.nil? %>
    <div class="alert alert-danger" role="alert">
      <span>Name already in use</span>
    </div>
  <% end %>
  <div class="col-xs-6 stores">
    <h3>Stores</h3>
    <ul>
      <% @stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    </ul>
    <form class="" action="/stores" method="post">
      <div class="form-group">
        <div class="form-group">
          <label class="label label-default" for="store_name">Name</label>
          <input class="form-control" type="text" name="store_name" placeholder="Enter a name...">
        </div>
        <div class="form-group">
          <label class="label label-default" for="store_description">Description</label>
          <textarea class="form-control" name="store_description" placeholder="Enter a description..."></textarea>
        </div>
        <div class="form-group">
          <label class="label label-default" for="store_address">Address</label>
          <input class="form-control" type="text" name="store_address" placeholder="Enter a address...">
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit" name="create_store">Create Store</button>
      </div>
    </form>
  </div>


  <div class="col-xs-6 brands">
    <h3>Brands</h3>
    <ul>
      <% @brands.each do |brand| %>
        <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
      <% end %>
    </ul>
    <form class="" action="/brands" method="post">
      <div class="form-group">
        <div class="form-group">
          <label class="label label-default" for="brand_name">Name</label>
          <input class="form-control" type="text" name="brand_name" placeholder="Enter a name...">
        </div>
        <div class="form-group">
          <label class="label label-default" for="brand_description">Description</label>
          <textarea class="form-control" name="brand_description" placeholder="Enter a description..."></textarea>
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit" name="create_brand">Create Brand</button>
      </div>
    </form>
  </div>
</div>
